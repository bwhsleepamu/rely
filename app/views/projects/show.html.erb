<% @title = "Project: #{@project.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Edit Project", edit_project_path(@project), class: 'btn btn-mini' %>
    <%= link_to "Delete Project", @project, :data => { :confirm => "Are you sure you want to delete Project #{@project.name}?" }, method: :delete, class: 'btn btn-mini btn-danger' %>
    <%= link_to "View Projects", projects_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @project.name %></dd>

  <dt>Description</dt>
  <dd><%= simple_format @project.description %></dd>

  <dt>Start Date</dt>
  <dd><%= @project.start_date %></dd>

  <dt>End Date</dt>
  <dd><%= @project.end_date %></dd>

  <dt>Groups</dt>
  <dd>
    <ul id="groups">
      <% @project.groups.each do |group| %>
        <li><%= group.name %></li>
      <% end %>
    </ul>
  </dd>
</dl>
