<%= render partial: 'contour/layouts/per_page', locals: { type: 'projects', per_page: 20 } %>

<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'projects.name', 'Name', 'projects_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'projects.description', 'Description', 'projects_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'projects.start_date', 'Start Date', 'projects_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'projects.end_date', 'End Date', 'projects_search') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.description %></td>
      <td><%= project.start_date %></td>
      <td><%= project.end_date %></td>
      <td>
        <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-mini' %>
        <%= link_to 'Delete', project,  :data => { :confirm => "Are you sure you want to delete Project #{project.name}?" }, method: :delete, class: 'btn btn-mini btn-danger' %>
      </td>
    </tr>
  <% end %>
</table>

<div class="center"><%= paginate @projects, theme: 'contour' %></div>
