<% @title = 'Assessment Results' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Assessment Result", new_assessment_result_path, class: 'btn btn-xs btn-primary' %>
  </h1>
</div>

<%= form_tag assessment_results_path, method: :get, remote: true, id: "assessment_results_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="assessment_results"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
