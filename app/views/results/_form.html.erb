<%= form_for result, html: { class: 'form-horizontal' } do |f| %>

  <% if result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(result.errors.count, "error") %> prohibited this result from being saved:</h2>
      <ul>
        <% result.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset>
    <legend>Result Information</legend>
    <%= f.hidden_field :reliability_id, value: result.reliability_id.id if result.reliability_id %>
    <%= f.hidden_field :study_original_result_id, value: result.study_original_result.id if result.study_original_result %>
    <%= f.hidden_field :study_id, value: result.study.id if result.study %>
    <%= f.hidden_field :rule_id, value: result.rule.id if result.rule %>

    <div class="control-group">
      <%= f.label :location, nil, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :location %>
      </div>
    </div>
  </fieldset>

  <fieldset>
    <legend>Result Assessment Questionnaire</legend>
    <%= render :partial => "assessments/questionnaire", :locals => { :assessment_type => result.rule.assessment_type, :assessment => result.assessment } %>

  </fieldset>

    <div class="form-actions">
    <%= f.submit "#{result.persisted? ? "Update" : "Add"} Result", class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
