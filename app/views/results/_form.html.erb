<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @result, html: { class: 'form-horizontal' } do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
      <% @result.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :user_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :user_id, [['---', nil]] + User.current.collect{|u| [u.name, u.id]} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :study_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :study_id, [['---', nil]] + Study.current.collect{|s| [s.name, s.id]} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :exercise_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :exercise_id, [['---', nil]] + Exercise.current.collect{|e| [e.name, e.id]} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :rule_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :rule_id, [['---', nil]] + Rule.current.collect{|r| [r.name, r.id]} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :result_type, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :result_type %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :location, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :location %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :deleted, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.check_box :deleted %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
