<div class="attached-files" data-update-asset-list="<%= asset_list_results_path %>" data-result-id="<%= result.id if result %>">
  <a data-toggle="collapse" data-target="#<%= "file_list_#{rule.id}" %>"><%= assets.length %></a> files currently attached.
  <ul class="collapse" id="<%= "file_list_#{rule.id}" %>">
    <% assets.each do |a| %>
      <li><%= link_to a.asset_file_name, download_result_asset_path(a) %></li>
    <% end %>
  </ul>
  
  <button class="upload_files btn btn-xs btn-primary" type="button" data-result-id="<%= result.id if result %>" data-target="#uploader">upload files</button>
</div>      
