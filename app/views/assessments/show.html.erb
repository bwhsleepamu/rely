<% @title = "Assessment: #{@assessment.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Edit Assessment", edit_assessment_path(@assessment), class: 'btn btn-xs' %>
    <%= link_to "Delete Assessment", @assessment, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to delete Assessment #{@assessment.name}?" } %>
    <%= link_to "View Assessments", assessments_path, class: 'btn btn-xs' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Result</dt>
  <dd><%= link_to @assessment.result.name, @assessment.result if @assessment.result %></dd>

  <dt>Assessment Type</dt>
  <dd><%= @assessment.assessment_type %></dd>

  <dt>Deleted</dt>
  <dd><%= @assessment.deleted %></dd>

</dl>
