<% @title = 'Assessments' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Assessment", new_assessment_path, class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag assessments_path, method: :get, remote: true, id: "assessments_search", class: 'form-search', data: { object: 'form-load' } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="assessments"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
