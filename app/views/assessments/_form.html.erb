<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @assessment, html: { class: 'form-horizontal', role: 'form'  } do |f| %>
  <%= display_errors @assessment  %>
  <div class="form-group">
    <%= f.label :result_id, nil, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.select :result_id, [['---', nil]] + Result.current.collect{|r| [r.name, r.id]} %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :assessment_type, nil, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.text_field :assessment_type %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :deleted, nil, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= f.check_box :deleted %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
