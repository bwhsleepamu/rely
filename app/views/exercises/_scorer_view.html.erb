<h3>Dashboard for Exercise <%= @exercise.name %></h3>
<dl class="dl-horizontal">
  <dt>Admin</dt>
  <dd><%= link_to @exercise.admin.name, @exercise.admin if @exercise.admin %></dd>

  <dt>Rule</dt>
  <dd>
    <%= link_to @exercise.rule.name, @exercise.rule if @exercise.rule %>
    <p><%= @exercise.rule.procedure %></p>
  </dd>

  <dt>Description</dt>
  <dd><%= simple_format @exercise.description %></dd>

  <dt>Assigned At</dt>
  <dd><%= @exercise.assigned_at %></dd>
</dl>

<div id="assigned_studies">
  <h3>Assigned Studies</h3>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Group Name</th>
        <th>Study ID</th>
        <th>Study Type</th>
        <th>Location</th>
        <th>Scored?</th>
        <th>Actions</th>
      </tr>
    </thead>
    <% @exercise.groups.each do |group| %>
      <tbody class="group" id="<%= group.id %>">
        <% group.studies.each do |study|  %>
          <tr class="study">
            <td><%= group.name %></td>
            <td class="reliability_id"><%= study.reliability_unique_id(current_user, @exercise) %></td>
            <td><%= study.study_type.name %></td>
            <td><%= study.location %></td>
            <td><%= study.has_result?(current_user, @exercise) %></td>
            <td>
              <% if study.has_result?(current_user, @exercise) %>
                <%= link_to("Edit Result", edit_result_path(reliability_id: study.reliability_unique_id(current_user, @exercise))) %>
              <% else %>
                <%= link_to("Add Result", new_result_path(reliability_id: study.reliability_unique_id(current_user, @exercise))) %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
      <% end %>
  </table>

</div>