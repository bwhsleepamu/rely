<div class="row">
  <h3 class="span8">Dashboard for Exercise <%= @exercise.name %></h3>
  <h3 class="span3">Completion Status</h3>
  <h3 class="span1" id="completion_percent"><%= completed_percent(@exercise, current_user) %></h3>
</div>

<dl class="dl-horizontal">
  <dt>Project</dt>
  <dd><%= @exercise.project.name %></dd>

  <dt>Rule</dt>
  <dd>
    <%= link_to @exercise.rule.name, @exercise.rule if @exercise.rule %>
    <p><%= @exercise.rule.procedure %></p>
  </dd>

  <dt>Description</dt>
  <dd><%= simple_format @exercise.description %></dd>

  <dt>Assigned</dt>
  <dd><%= simple_time @exercise.assigned_at %></dd>
</dl>

<div id="assigned_studies">
  <h3>Assigned Studies</h3>
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>Group Name</th>
        <th>Study ID</th>
        <th>Study Type</th>
        <th>Location</th>
        <th>Scored?</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
    <% current_user.exercise_reliability_ids(@exercise).order(:study_id).each do |r_id| %>
      <tr class="study">
        <td><%= r_id.group.name %></td>
        <td class="reliability_id"><%= r_id.unique_id %></td>
        <td><%= r_id.study.study_type.name %></td>
        <td><%= r_id.study.location %></td>
        <td><%= r_id.has_result? %></td>
        <td>
          <% if r_id.has_result? %>
            <%= link_to("Edit Result", edit_result_path(id: r_id.result.id), class: 'btn btn-mini btn-warning') %>
          <% else %>
            <%= link_to("Add Result", new_result_path(reliability_id: r_id.id), class: 'btn btn-mini btn-primary') %>
          <% end %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

</div>
