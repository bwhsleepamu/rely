<% @title = 'Exercises' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Exercise", new_exercise_path, class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag exercises_path, method: :get, remote: true, id: "exercises_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="exercises">
  <center><%= image_tag "contour/ajax-loader.gif" %></center>
</div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#exercises_search").attr("action"), $("#exercises_search").serialize(), null, "script");
  });
<% end %>
