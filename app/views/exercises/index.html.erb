<h1>Listing exercises</h1>

<table>
  <tr>
    <th>Admin</th>
    <th>Assessment</th>
    <th>Rule</th>
    <th>Name</th>
    <th>Description</th>
    <th>Assigned at</th>
    <th>Completed at</th>
    <th>Deleted</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @exercises.each do |exercise| %>
  <tr>
    <td><%= exercise.admin_id %></td>
    <td><%= exercise.assessment_id %></td>
    <td><%= exercise.rule_id %></td>
    <td><%= exercise.name %></td>
    <td><%= exercise.description %></td>
    <td><%= exercise.assigned_at %></td>
    <td><%= exercise.completed_at %></td>
    <td><%= exercise.deleted %></td>
    <td><%= link_to 'Show', exercise %></td>
    <td><%= link_to 'Edit', edit_exercise_path(exercise) %></td>
    <td><%= link_to 'Destroy', exercise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

