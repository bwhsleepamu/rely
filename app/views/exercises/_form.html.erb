<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @exercise, html: { class: 'form-horizontal' } do |f| %>
  <%= display_errors @exercise %>

  <div class="control-group">
    <%= f.label :rule_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :rule_id, [['---', nil]] + Rule.current.collect{|r| [r.name, r.id]}, {}, {rel: "chosen"} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :group_ids, "Groups", class: 'control-label' %><br/>
    <div class="controls">
      <%= f.collection_select :group_ids, Group.current.order(:name), :id, :name, {}, {multiple:true, rel: :chosen} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :scorer_ids, "Scorers", class: 'control-label' %><br/>
    <div class="controls">
      <%= f.collection_select :scorer_ids, User.current.scorers.order(:last_name), :id, :name, {}, {multiple:true, rel: :chosen} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Launch Exercise", class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
