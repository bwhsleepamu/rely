<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @exercise, html: { class: 'form-horizontal' } do |f| %>
  <% if @exercise.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@exercise.errors.count, "error") %> prohibited this exercise from being saved:</h2>

      <ul>
      <% @exercise.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :rule_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :rule_id, [['---', nil]] + Rule.current.collect{|r| [r.name, r.id]} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :name, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :description, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :description, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :assessment_type, "Assessment Type", class: 'control-label' %>
    <div class="controls">
      <%= select_tag "exercise[assessment_type]", options_for_select(Assessment::TYPES.collect {|key, val| [key, val[:title]] }), :id => :exercise_assessment_type %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :group_ids, "Groups", class: 'control-label' %><br/>
    <div class="controls">
      <%= f.collection_select :group_ids, Group.current.order(:name), :id, :name, {}, {multiple:true} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :scorer_ids, "Scorers", class: 'control-label' %><br/>
    <div class="controls">
      <%= f.collection_select :scorer_ids, User.current.scorers.order(:last_name), :id, :name, {}, {multiple:true} %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Launch Exercise", class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
