<% @title = "#{@exercise.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Edit Exercise", edit_exercise_path(@exercise), class: 'btn btn-xs' %>
    <%= link_to "Delete Exercise", @exercise, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to delete Exercise #{@exercise.name}?" } %>
    <%= link_to "View Exercises", exercises_path, class: 'btn btn-xs' %>
  </h1>
</div>

<%= render "manager_view" %>
