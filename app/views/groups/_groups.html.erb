<%= render partial: 'contour/layouts/per_page', locals: { type: 'groups', per_page: 20 } %>

<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'groups.name', 'Name', 'groups_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'groups.description', 'Description', 'groups_search') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @groups.each do |group| %>
    <tr>
      <td><%= group.name %></td>
      <td><%= group.description %></td>
      <td>
        <%= link_to 'Edit', edit_group_path(group), class: 'btn btn-mini' %>
        <%= link_to 'Delete', group, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete Group #{group.name}?" } %>
      </td>
    </tr>
  <% end %>
</table>

<div class="center"><%= paginate @groups, theme: 'contour' %></div>
