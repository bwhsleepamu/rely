<% @title = "Group: #{@group.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Edit Group", edit_group_path(@group), class: 'btn btn-xs' %>
    <%= link_to "Delete Group", @group, method: :delete, class: 'btn btn-xs btn-danger', data: { confirm: "Are you sure you want to delete Group #{@group.name}?" } %>
    <%= link_to "View Groups", groups_path, class: 'btn btn-xs' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @group.name %></dd>

  <dt>Description</dt>
  <dd><%= @group.description %></dd>

  <dt>Studies</dt>
  <dd>
    <ul id="studies">
      <% @group.studies.each do |study| %>
        <li><%= study.to_s %></li>
      <% end %>
    </ul>
  </dd>

</dl>
