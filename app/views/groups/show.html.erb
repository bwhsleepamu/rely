<% @title = "Group: #{@group.name}" %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Edit Group", edit_group_path(@group), class: 'btn btn-mini' %>
    <%= link_to "Delete Group", @group, method: :delete, class: 'btn btn-mini btn-danger', data: { confirm: "Are you sure you want to delete Group #{@group.name}?" } %>
    <%= link_to "View Groups", groups_path, class: 'btn btn-mini' %>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt>Name</dt>
  <dd><%= @group.name %></dd>

  <dt>Description</dt>
  <dd><%= @group.description %></dd>

  <dt>Deleted</dt>
  <dd><%= @group.deleted %></dd>

</dl>
