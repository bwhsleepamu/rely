<% @title = 'Reliabilities' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Reliability", new_reliability_id_path, class: 'btn btn-mini btn-primary' %>
  </h1>
</div>

<%= form_tag reliability_ids_path, method: :get, remote: true, id: "reliability_ids_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="reliability_ids"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#reliability_ids_search").attr("action"), $("#reliability_ids_search").serialize(), null, "script");
  });
<% end %>
