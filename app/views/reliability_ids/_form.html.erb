<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for @reliability_id, html: { class: 'form-horizontal' } do |f| %>
  <% if @reliability_id.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reliability_id.errors.count, "error") %> prohibited this reliability_id from being saved:</h2>

      <ul>
      <% @reliability_id.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :unique_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :unique_id %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :study_id, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.select :study_id, [['---', nil]] + Study.current.collect{|s| [s.name, s.id]} %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :deleted, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.check_box :deleted %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
