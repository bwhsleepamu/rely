<% @title = 'Users' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <% if current_user.system_admin? and false %>
        <%= link_to "Create User", new_user_path, class: 'btn btn-mini btn-primary' %>
    <% end %>
  </h1>
</div>

<%= form_tag users_path, method: :get, remote: true, id: "users_search", class: 'form-search', data: { object: 'form-load' } do %>
    <%= hidden_field_tag :order %>
    <%= text_field_tag 'search', params[:search], class: 'search-query' %>
    <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="users"><%= image_tag "contour/ajax-loader.gif" %></div>
